{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "module": "ES2020",
    "moduleResolution": "Node",
    "noEmit": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2019",
    "typeRoots": [
      "./node_modules/@types",
      ".src/typings"
    ]
  },
  "exclude": [
    "node_modules",
    "dev",
    "build"
  ]
}
